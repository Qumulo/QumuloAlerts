{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AlertQueue",
    "description": "A schema to validate the queue configuration file for Qumulo Alerts",
    "type": "object",
    "required": [
	"cluster",
	"port",
	"vhost",
	"exchange",
	"routing_key",
	"username",
	"password"
    ],
    "type": "object",
    "properties":
    {
	"cluster": {"type": "string"},
	"port": {"type": "integer"},
	"vhost": {"type": "string"},
	"exchange": {"type": "string"},
	"routing_key": {"type": "string"},
	"username": {"type": "string"},
	"password": {"type": "string"}
    }
}
