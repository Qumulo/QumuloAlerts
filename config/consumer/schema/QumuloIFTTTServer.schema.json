{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "IFTTTServer",
    "description": "A schema to validate the IFTTTServer config file for QumuloIFTTT",
    "type": "object",
    "properties":
    {
	"token": {"type": "string"},
	"trigger_action": {"type": "string"},
        "default_timezone": {"type":  "string", "default": "UTC"},
        "default_language": {"type": "string", "default":  "en_GB"}
    },
    "required":
    [
	"token",
	"trigger_action"
    ]
}
