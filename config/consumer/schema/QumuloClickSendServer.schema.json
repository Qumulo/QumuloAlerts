{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ClickSend",
    "description": "A schema to validate the ClickSend service for the ClickSend Server",
    "type": "object",
    "properties":
    {
	"username": {"type": "string"},
	"token": {"type": "string"},
	"senderid": {"type": "string"},
        "default_timezone": {"type":  "string", "default": "UTC"},
        "default_language": {"type": "string", "default":  "en_GB"}
    },
    "required":
    [
	"username",
	"token"
    ]
}
